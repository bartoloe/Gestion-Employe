<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.m2l.manu.test.Add"
    android:id="@+id/addit">

    <ImageView
        android:layout_width="480dp"
        android:layout_height="120dp"
        android:id="@+id/imageView3"
        android:src="@drawable/logo"
        android:contentDescription=""
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ajout d&apos;un employé"
        android:layout_weight="1"
        android:id="@+id/lblajout"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nom :"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView3"
        android:layout_toLeftOf="@+id/lblajout"
        android:layout_toStartOf="@+id/lblajout"
        android:layout_marginTop="49dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtnom"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/txtprenom"
        android:layout_alignStart="@+id/txtprenom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prénom :"
        android:id="@+id/textView4"
        android:editable="false"
        android:layout_alignBottom="@+id/txtprenom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtprenom"
        android:layout_below="@+id/txtnom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtEmail"
        android:layout_below="@+id/txtprenom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="E-mail :"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/txtEmail"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:id="@+id/btnretour"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:id="@+id/btnajouter"
        android:layout_below="@+id/txtEmail"
        android:layout_alignLeft="@+id/btnretour"
        android:layout_alignStart="@+id/btnretour" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblinfo"
        android:layout_below="@+id/btnajouter"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtpassword"
        android:layout_above="@+id/btnretour"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff0300"
        android:editable="true"
        android:singleLine="true"
        android:inputType="text"
        android:focusable="true"
        android:clickable="true"
        android:cursorVisible="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/texty"
        android:layout_below="@+id/lblinfo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
