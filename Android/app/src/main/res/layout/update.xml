<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.m2l.manu.test.Update"
    android:id="@+id/update">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prénom :"
        android:id="@+id/lblprenom"
        android:editable="false"
        android:layout_alignTop="@+id/txtprenom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtprenom"
        android:layout_below="@+id/txtnom"
        android:layout_alignLeft="@+id/txtnom"
        android:layout_alignStart="@+id/txtnom"
        android:layout_marginTop="22dp" />

    <ImageView
        android:layout_width="480dp"
        android:layout_height="120dp"
        android:id="@+id/imageView2"
        android:src="@drawable/logo"
        android:contentDescription=""
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Modifications"
        android:layout_weight="1"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="E-mail :"
        android:id="@+id/lblmail"
        android:layout_alignBottom="@+id/txtEmail"
        android:layout_alignRight="@+id/lblprenom"
        android:layout_alignEnd="@+id/lblprenom"
        android:layout_alignParentEnd="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtEmail"
        android:layout_below="@+id/txtprenom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Génerer un nouveau mot de     passe  pour l&apos;utilisateur :"
        android:id="@+id/textView3"
        android:layout_above="@+id/btngenerer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lblid"
        android:layout_above="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nom :"
        android:id="@+id/lblnom"
        android:layout_alignTop="@+id/txtnom"
        android:layout_alignRight="@+id/lblprenom"
        android:layout_alignEnd="@+id/lblprenom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtnom"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:id="@+id/btnmodifier"
        android:layout_below="@+id/txtEmail"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Génerer"
        android:id="@+id/btngenerer"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnmodifier"
        android:layout_alignStart="@+id/btnmodifier" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblpasse"
        android:layout_below="@+id/btnmodifier"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff1d00" />
</RelativeLayout>
