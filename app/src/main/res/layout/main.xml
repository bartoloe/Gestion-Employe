<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.m2l.manu.test.Main"
    android:id="@+id/main">

    <ImageView
        android:layout_width="480dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:contentDescription=""
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ajouter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblligue">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="0,1"
        android:id="@+id/main_table"
        android:layout_weight="1"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginBottom="50dp">
    </TableLayout>
</ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ligue de Tennis"
        android:layout_weight="1"
        android:id="@+id/lblligue"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ajouter"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/lblligue"
        android:layout_alignEnd="@+id/lblligue"
        android:layout_alignLeft="@+id/lblligue"
        android:layout_alignStart="@+id/lblligue"
        android:src="@drawable/add"
        android:background="@android:color/transparent"
        />




</RelativeLayout>
